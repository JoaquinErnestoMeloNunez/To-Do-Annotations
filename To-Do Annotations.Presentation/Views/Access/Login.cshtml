@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión - ToDo App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
        }

        .login-card {
            background-color: #1E1E1E;
            border: 1px solid #333;
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(111, 66, 193, 0.2);
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
        }

        .login-title {
            color: #fff;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .form-label {
            color: #b0b0b0;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: #2D2D2D;
            border: 1px solid #404040;
            color: #fff;
            padding: 0.75rem;
            border-radius: 8px;
        }

            .form-control:focus {
                background-color: #2D2D2D;
                color: #fff;
                border-color: #8a4baf;
                box-shadow: 0 0 0 0.25rem rgba(138, 75, 175, 0.25);
            }

        .btn-purple {
            background: linear-gradient(135deg, #6f42c1, #8e44ad);
            border: none;
            color: white;
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-purple:hover {
                background: linear-gradient(135deg, #5a32a3, #732d91);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(111, 66, 193, 0.4);
                color: white;
            }

        .link-purple {
            color: #a569bd;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.2s;
        }

            .link-purple:hover {
                color: #d2b4de;
                text-decoration: underline;
            }

        .alert-danger {
            background-color: #2c0b0e;
            border-color: #842029;
            color: #ea868f;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="login-card">
        <div class="text-center mb-4">
            <h3 class="login-title">Inicio Sesión</h3>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center p-2 mb-4">
                <small>@ViewBag.Error</small>
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-4">
                <label class="form-label">Usuario</label>
                <input type="text" name="username" class="form-control" placeholder="Username" required />
            </div>
            <div class="mb-4">
                <label class="form-label">Contraseña</label>
                <input type="password" name="password" class="form-control" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-purple w-100 mb-3">Entrar</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Register", "Access")" class="link-purple ms-1">Registrarse</a>
        </div>
    </div>

</body>
</html>