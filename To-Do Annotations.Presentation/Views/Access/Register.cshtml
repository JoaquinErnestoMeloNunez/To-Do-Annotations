@model To_Do_Annonations.Domain.Entities.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - ToDo App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Inter', sans-serif;
        }

        .register-card {
            background-color: #1E1E1E;
            border: 1px solid #333;
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(111, 66, 193, 0.2);
            width: 100%;
            max-width: 400px;
            padding: 2.5rem;
        }

        .register-title {
            color: #fff;
            font-weight: 700;
        }

        .form-label {
            color: #b0b0b0;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: #2D2D2D;
            border: 1px solid #404040;
            color: #fff;
            padding: 0.75rem;
            border-radius: 8px;
        }

            .form-control:focus {
                background-color: #2D2D2D;
                color: #fff;
                border-color: #8a4baf;
                box-shadow: 0 0 0 0.25rem rgba(138, 75, 175, 0.25);
            }

        .btn-purple-outline {
            background-color: transparent;
            border: 2px solid #6f42c1;
            color: #6f42c1;
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-purple-outline:hover {
                background-color: #6f42c1;
                color: white;
                box-shadow: 0 5px 15px rgba(111, 66, 193, 0.3);
            }

        .link-back {
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
            transition: color 0.2s;
        }

            .link-back:hover {
                color: #bbb;
            }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="register-card">
        <div class="text-center mb-4">
            <h3 class="register-title">Crear Cuenta</h3>
        </div>

        <form asp-action="Register" method="post">
            <div class="mb-4">
                <label class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" placeholder="Username" required />
            </div>
            <div class="mb-4">
                <label class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
            </div>

            <button type="submit" class="btn btn-purple-outline w-100 mb-3">Registrarse</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Access")" class="link-back">
               Volver al Login
            </a>
        </div>
    </div>

</body>
</html>